<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title> Google Vision Human Counter </title>
    <% include head %>
</head>
<body class="container">
    <header>
      <% include header %>
    </header>
    <script src="https://www.gstatic.com/firebasejs/live/3.0/firebase.js"></script>
    <main>
        <div class="row">
            <div class="col-sm-8">

                <div class="jumbotron">
                    <h1>Google project</h1>
                    <p>Vision Recognition</p>
                    <ul>
                      <% images.forEach(function(images) { %>
                        <img src='<%= images.url %>' />
                        <li><strong><%=images.name %></strong> There are
                        <%= images.numOfPeople %> people in the image at <%= images.time %>.</li>
                        <% }); %>
                        </ul>
                </div>
                </div>
            </div>
    </main>

