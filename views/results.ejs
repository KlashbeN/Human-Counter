<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8"/>
        <title>
            Google Vision Human Counter
        </title>
        <% include head %>
    </head>
    <body class="container-fluid">
        <header>
            <% include header %>
        </header>

        <main>
            <div class="row">
                <div class="col-lg-12">
                    <div class="jumbotron">
                        <h3>Google project</h3>
                        <p>Vision Recognition</p>

                        <form action="/results" form method="POST">
                            <div class="form-group">
                                Enter a date in MMDDYY:
                                <input type="text" id="date" name="date"><br>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="View"><br>
                            </div>
                        </form>

                        <ul class="list-inline">
                          <% if (images.length >0) { %>
                            <h3> Viewing data for <%=date%> </h3>
                            <% images.forEach(function(image) { %>
                                <li>
                                  <img src='<%= image.url %>' class='img-thumbnail' style="width:246px;height:246px;"/>
                                  <br>
                                    <strong><%=image.name %></strong>
                                    There are
                                    <%= image.numOfPeople %>
                                    people in the image at<br>
                                    <%= image.time %><br></li>
                            <% }); %>
                            <% } else { %>
                              <h2> No data available for <%=date%></h2>
                              <% } %>
                        </ul>
                    </div>
                </div>
            </div>
        </main>

        <script>
            (function(i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r;
                i[r] = i[r] || function() {
                    (i[r].q = i[r].q || []).push(arguments)
                },
                i[r].l = 1 * new Date();
                a = s.createElement(o),
                m = s.getElementsByTagName(o)[0];
                a.async = 1;
                a.src = g;
                m.parentNode.insertBefore(a, m)
            })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

            ga('create', 'UA-79208871-1', 'auto');
            ga('send', 'pageview');
        </script>

    </body>
</html>
